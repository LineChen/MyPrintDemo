<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="15dp">


    <Button
            android:id="@+id/btStartScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="startScan"
            android:text="开始扫描"/>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/btStartScan"
            app:layout_constraintTop_toTopOf="@+id/btStartScan"
            app:layout_constraintBottom_toBottomOf="@+id/btStartScan"/>

    <TextView
            android:id="@+id/tvScanFinished"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扫描完成"
            android:layout_marginLeft="30dp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@+id/btStartScan"
            app:layout_constraintTop_toTopOf="@+id/btStartScan"
            app:layout_constraintBottom_toBottomOf="@+id/btStartScan"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btStartScan"
            android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>